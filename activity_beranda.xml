<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/berandaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo Cabai -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cabai"
            android:contentDescription="Gambar daun cabai"
            android:layout_marginBottom="16dp" />

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deteksi Daun Cabai"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi ini mendeteksi kondisi daun cabai seperti kekurangan nitrogen, kalium, kalsium, air, dan memberikan saran perbaikannya."
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Navigasi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnDeteksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📷 Mulai Deteksi Kamera"
                    android:backgroundTint="#2E7D32"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnRiwayat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📁 Riwayat Hasil Deteksi"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#388E3C"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnTentang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ Tentang Aplikasi"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Container untuk Fragment -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Informasi Versi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.0 - oleh Fidelia Salsabilla Natawijaya"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#888888"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
