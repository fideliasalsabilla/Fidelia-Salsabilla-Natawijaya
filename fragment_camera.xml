<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <org.tensorflow.lite.examples.objectdetection.OverlayView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <!-- Ganti include dengan isi langsung info_bottom_sheet -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottomsheet"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="30dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Handle Drag -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_handle"
            android:layout_marginBottom="8dp" />

        <!-- Teks Geser -->
        <TextView
            android:id="@+id/dragIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geser keatas untuk selengkapnya"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/inferenceTimeVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inference Time: 0 ms"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/rekomendasiTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rekomendasi akan muncul di sini"
            android:textSize="14sp"
            android:padding="16dp"
            android:textColor="@android:color/black" />


        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan Hasil"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
